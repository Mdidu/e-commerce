{% extends 'base.html.twig' %}

{% block body %}
<h1 class="row justify-content-center">Liste des {{ category.name }}</h1>

<div class="container">
    <div class="row">
{% for product in products %}
{% if product.category.id is same as(category.id) %}
    <div class="card col-3">
        <a class="text-dark" href="{{ path('product', {'name': category.name, 'id': product.id}) }}">
        <img class="card-img-top" src="{{product.image}}" alt="">
        <div class="card-body">
            <div class="card-text">{{product.price}}â‚¬</div>
            <div class="card-title">{{product.title}}</div>
        </div>
        </a>
    </div>
{% endif %}
{% endfor %}
    </div>
</div>
{% endblock %}